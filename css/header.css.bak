.hidden {
    display: none !important;
}

.hover {
    box-sizing: border-box;
    border-bottom: #CC9756 3px solid;
}

.hover a {
    color: #CC9756;
}

.top-bar {
    background: #333333;
    height: 35px;
    width: 100%;
}

.top-bar .container {
    display: flex;
    height: 35px;
    flex-direction: row-reverse;
    align-items: center;
}

.top-bar ul {
    display: flex;
}

.top-bar ul li a {
    display: inline-block;
    color: #CBCBCB;
    height: 16px;
    font-size: 16px;
    line-height: 16px;
    padding-right: 10px;
    padding-left: 10px;
    border-left: #CBCBCB 1px solid;
}

.title .container {
    height: 110px;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.top-bar span {
    display: inline-block;
    width: 10px;
    height: 12px;
    background: url("../img/bg.webp") 0 0;
    background-size: 212px 840px;
}

.logo {
    display: block;
    height: 53px;
    width: 212px;
    background: url("../img/bg.webp") no-repeat 0 -303px;
    background-size: 212px 840px;
}

.search {
    width: 530px;
    height: 36px;
}

.search form {
    display: flex;
    position: relative;
    width: 100%;
    height: 100%;
    border: #CC9756 1px solid;
    box-sizing: border-box;
    padding-left: 10px;
    border-radius: 100px;
    overflow: hidden;
}

.search-logo {
    display: inline-block;
    line-height: 36px;
    height: 15px;
    width: 15px;
    background: url("../img/bg.webp") no-repeat 0 -518px;
    background-size: 212px 840px;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}

.search form input:nth-of-type(1) {
    flex: 1;
    border: none;
}

.search form input:nth-of-type(2) {
    border: none;
    color: white;
    background: #CC9756;
    width: 90px;
}

.search ul {
    display: flex;
    margin-top: 5px;
    /*gap: 10px;*/
}

.search ul li {
    padding-right: 10px;
    padding-left: 10px;
}

.search ul li:not(:nth-of-type(1)) {
    border-left: 1px gray solid;
}

.search ul li:nth-of-type(5) a, .search ul li:nth-of-type(6) a {
    color: #CC9756;
}

.search ul a {
    color: gray;
}

.cart {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 132px;
    height: 36px;
    border: 1px solid #CC9756;
    border-radius: 100px;
}

.cart-logo {
    height: 17px;
    width: 15px;
    background: url("../img/bg.webp") no-repeat 0 -148px;
    background-size: 212px 840px;
    margin-right: 5px;
}

.cart span:nth-of-type(1) {
    color: #CC9756;
    font-size: 16px;
}

.cart span:nth-of-type(2) {
    height: 20px;
    width: 20px;
    text-align: center;
    color: white;
    font-size: 14px;
    line-height: 20px;
    background: url("../img/bg.webp") no-repeat 0 -50px;
    background-size: 212px 840px;
    margin-left: 10px;
}

nav {
    position: relative;
    height: 30px;
    border-bottom: #E9E9E9 1px solid;
    margin-top: 10px;
}

nav .container ul {
    display: flex;
    justify-content: space-around;
    font-weight: 800;
}

nav .container li {
    height: 30px;
}

nav .container ul a {
    display: block;
    padding-right: 15px;
    padding-left: 15px;
}

.drop-down-container {
    position: relative;
    display: flex;
    justify-content: center;
}

.drop-down {
    display: flex;
    justify-content: space-between;
    border: #E9E9E9 1px solid;
    width: 1200px;
    background: white;
    padding: 20px;
    z-index: 100;
}

.drop-down ul li {
    padding-top: 10px;
    padding-bottom: 10px;
    font-size: 18px;
}

.drop-down ul {
    width: 100px;
}

.drop-down ul li:first-of-type {
    font-weight: 800;
    border-bottom: 1px solid #E9E9E9;
}

.banner {
    position: relative;
}

.banner img {
    width: 100%;
    min-width: 1800px;
}





